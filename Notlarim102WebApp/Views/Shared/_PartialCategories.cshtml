@using Notlarim102.BusinessLayer
@using Notlarim102.Entity
@{
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.GetCategories();
}
<p class="lead mt-5 fw-bolder">Kategoriler</p>
<div class="list-group">
    @* fixed-top *@
    <a href="@Url.Action("Index","Home")" class="list-group-item list-group-item-action active" aria-current="true">
        <span> <i class="fas fa-angle-double-right"></i> </span>
        Tümü
    </a>

    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item list-group-item-action">
            <span> <i class="fas fa-angle-double-right"></i> </span>
            @cat.Title
        </a>
    }

