@using Notlarim102.Entity

@model List<Note>
@{
    ViewBag.Title = "Index";
}

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">
            @foreach (Note note in Model)
            {

                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->

                        <img class="card-img-top" src="https://picsum.photos/id/@note.Id/450/300" alt="..." />

                        <!-- Product details-->
                        <div class="card-body px-1 py-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@note.Title </h5>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <i class="far fa-user"></i> @note.Owner.Username
                                    </div>
                                    <div>
                                        <i class="far fa-clock"></i> @note.ModifiedOn.ToString("dd.MM.yy HH:mm");
                                    </div>
                                </div>
                                <hr />
                                <p class="card-text">
                                    @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 100)
                                    {
                                        //note daki text bos ya da null mudur?
                                        @(note.Text.Substring(0,100)+"...")
                                    }
                                    else
                                    {
                                        @note.Text
                                    }
                                </p>

                            </div>
                        </div>
                        <!-- Product actions-->
                        @*<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                            </div>*@
                        <div class="bg-transparent d-flex justify-content-between">
                            <p>
                                <button type="button" class="btn btn-outline-light text-dark btn-md">
                                    <i class="bi-star-fill text-primary"></i> @note.LikeCount
                                </button>
                            </p>
                            <p>
                                <button type="button" class="btn btn-outline-light text-dark btn-md">
                                    <i class="bi bi-chat-left-dots-fill text-primary"></i> Yorumlar
                                </button>
                            </p>
                        </div>


                    </div>
                </div>
            }

