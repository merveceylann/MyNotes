@model IEnumerable<Notlarim102.Entity.Category>

@{
    ViewBag.Title = "Index";
}


<br />
<p>
    @Html.ActionLink(" ", "Create",null, new { @class = "btn btn-outline-dark bi bi-plus-lg" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatdOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatdOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedUserName)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id },new { @class = "btn btn-outline-primary far fa-edit" })  
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success bi bi-search" }) 
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger bi bi-trash-fill" })
        </td>
    </tr>
}

</table>
